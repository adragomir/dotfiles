#!/usr/bin/ruby

require 'rubygems'
require 'mechanize'

if ARGV.length == 0 
  puts "  Usage: #{File.basename(__FILE__)} PageName\n\n"
  exit
end

a = WWW::Mechanize.new
u = "http://c2.com/cgi/wiki?" + ARGV[0]

page = a.get(u)

page.links.select { |l| l.href =~ /wiki\?/ }.each { |l|
  #l.url = l.href.gsub(/wiki\?/, "")
}
puts page.body
exit

