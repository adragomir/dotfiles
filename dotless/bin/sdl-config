#!/bin/sh

prefix=/Library/Frameworks
exec_prefix=/usr

usage="\
Usage: sdl-config [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 1.2.9
      ;;
    --cflags)
      echo -I${prefix}/SDL.framework/Headers  -D_THREAD_SAFE

      # The portable way of including SDL is #include "SDL.h"
      ;;
    --libs)
      libdirs="-L${exec_prefix}/lib "
      echo $libdirs -lSDLmain -F${prefix} -framework SDL  -framework Cocoa -framework Carbon -framework OpenGL
      ;;
    --static-libs)
      echo "Static linking is not supported, only dynamic !" 1>&2
      exit 1
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
