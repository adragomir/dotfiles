#!/usr/bin/env ruby
begin
    require 'rubygems'
rescue LoadError
end
require 'appscript'
require 'fileutils'
include Appscript

fl = File.expand_path(ARGV[0])
if (File.file?(fl))
else
	FileUtils.touch(fl)
end
te = app('/Users/adragomi/Applications/Vim.app')
te.activate
te.open(MacTypes::Alias.path(fl))
