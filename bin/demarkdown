#!/usr/bin/env python

import sys
from html2markdown import html2markdown

if __name__ == "__main__":
    if len(sys.argv) > 1:
        inputFile = open(sys.argv[1], "r")
    else:
        inputFile = sys.stdin
    status, output = html2markdown.html2markdown_file(inputFile)
    if status == 0:
        sys.stdout.write(output)
    sys.exit(status)

