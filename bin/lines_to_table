#!/usr/bin/env ruby

require 'rubygems'
require 'terminal-table'

cols = ARGV[0].to_i

raw_rows = []
STDIN.read.split("\n").each do |l|
   raw_rows << l
end

headings = raw_rows.shift(cols)
rows = []

while raw_rows.length > 0
  rows << Array(raw_rows.shift(cols))
end

table = Terminal::Table.new :headings => headings, :rows => rows
puts table
